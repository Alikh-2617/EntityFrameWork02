@model PersonVM

@{
    ViewData["Title"] = "Index";
}

<h1>People</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Person </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Person ID
            </th>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                PhoneNumber
            </th>
            <th>
                Register Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var person in Model.People) {
        <tr>
                <td>
                    @person.Id
                </td>
            <td>
                @person.Name
            </td>
            <td>
                @person.Age
            </td>
            <td>
                @person.PhoneNumber
            </td>
            <td>
                @person.Register
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@person.Id">Edit</a> |
                    <a class="btn btn-info" asp-controller="AddLanguageToPeople" asp-action="Index" asp-route-id="@person.Id">See Languagies hi speaks</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@person.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
