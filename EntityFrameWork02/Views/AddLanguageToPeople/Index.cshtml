@model List<Language>
@{
    ViewData["Title"] = "Index";
}

@if(Model.Count != 0){
    <h1>Language</h1>
    <table class="table">
        <thead>
            <th>Languages Name </th>
            <th> </th>
        </thead>
        <tbody>
            @foreach(var language in Model)
            {
                <tr>
                    <th>@language.Name</th>
                    <th>
                        <a class="btn btn-danger" asp-action="DeleteLanguageAvPerson" asp-route-languageid="@language.Id" asp-route-id="@ViewBag.personId">Delete</a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Person Name : @ViewBag.person </h3>
    <h4>There is no language in Database</h4>
}


