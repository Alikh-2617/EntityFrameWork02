@model List<Person>
@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() != 0)
{
    <h3>@ViewBag.City </h3>
    <h3>@ViewBag.PostNumber </h3>

    <table class="table">
        <thead>
            <tr>
                <th>Person ID </th>
                <th>Name </th>
                <th>Age </th>
                <th>Phone Number</th>
                <th>Register Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.Name</td>
                    <td>@person.Age </td>
                    <td>@person.PhoneNumber</td>
                    <td>@person.Register</td>
                    <td><a class="btn btn-danger" asp-action="RemovePersonAvCity" asp-route-id="@person.Id" asp-route-cityid="@ViewBag.Id"> Delete </a></td>

                </tr>
            }

        </tbody>
    </table>
}
else
{
<h3>No body liv in this City :</h3>
<h5>City Name : @ViewBag.City</h5>
<h5>Post Number : @ViewBag.PostNumber </h5>
}

