@model List<Person>
@{
    ViewData["Title"] = "Index";
}


@if(Model.Count() != 0)
{
    <h3>@ViewBag.Message1 </h3>
    <h3>@ViewBag.Message2 </h3>

    <table class="table">
        <thead>
            <tr>
                <th>Person ID </th>
                <th>Name </th>
                <th>Age </th>
                <th>Phone Number</th>
                <th>Register Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.Name</td>
                    <td>@person.Age </td>
                    <td>@person.PhoneNumber</td>
                    <td>@person.Register</td>
                    @if (ViewBag.Id != null)
                    {
                        <td><a class="btn btn-danger" asp-action="RemovePersonAvCity" asp-route-id="@person.Id" asp-route-cityid="@ViewBag.Id"> Delete of city</a></td>
                    }
                    @if (ViewBag.languageId != null){
                        <td><a class="btn btn-danger" asp-action="RemovePersonAvLanguage" asp-route-id="@person.Id" asp-route-languageId="@ViewBag.languageId"> Delete of language</a></td>

                    }

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h3>No body @ViewBag.Message3 </h3>
}

