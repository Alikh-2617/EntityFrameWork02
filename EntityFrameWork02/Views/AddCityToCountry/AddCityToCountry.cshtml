@model List<City>
@{
    ViewData["Title"] = "AddCityToCountry";
}

<h1>Add City To This Country</h1>

@if (ViewBag.Message != null)
{
    <h4>@ViewBag.Message</h4>
    <h4>@ViewBag.Message1</h4>
}
else
{
    <form asp-action="AddCityToCountry" method="post">
        <div class="form-group">
            <label>Country</label>
            <select name="countryid" class="form-control" asp-items="@ViewBag.country"></select>
        </div>
        <div class="form-group">
            <label>City</label>
            <select name="id" class="form-control" asp-items="@ViewBag.city"></select>
        </div>

        <input type="submit" value="Add To City" class="btn btn-primary" />

    </form>
}

            