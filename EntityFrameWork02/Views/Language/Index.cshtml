@model LanguageVM

@{
    ViewData["Title"] = "Index";
}

<h1>Languagies</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Language</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Languages Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var language in Model.Languagies) {
        <tr>
            <td>
                @language.Name
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@language.Id">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@language.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
